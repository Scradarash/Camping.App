<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Camping.App.Views.KalenderView"
             BackgroundColor="#80000000">

    <Grid HorizontalOptions="Center" VerticalOptions="Center" 
          BackgroundColor="White" WidthRequest="300" HeightRequest="220" Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Aankomst" FontAttributes="Bold" Grid.Row="0"/>
        <DatePicker x:Name="AankomstPicker"
                    MinimumDate="{Binding CurrentDate}" 
                    DateSelected="OnAankomstDateSelected"
                    Grid.Row="1"/>

        <Label Text="Vertrek" FontAttributes="Bold" Grid.Row="2"/>

        <DatePicker x:Name="VertrekPicker"
                    MinimumDate="{Binding CurrentDate}" 
                    Grid.Row="3"/>
        
        <Button Text="Sluiten" 
                Clicked="CloseButton_Clicked"
                Style="{StaticResource ExitButtonStyle}" 
                Margin="0,10,0,0" 
                Grid.Row="4"
                FontSize="18"                
                HeightRequest="50"
                WidthRequest="120"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>